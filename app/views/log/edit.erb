<h2>Edit Log</h2>

<form method="post" action="/logs/<%=@log%>">
    <input id="hidden" type="hidden" name="_method" value="PATCH"/>

    <label for="distance">Distance</label>
    <input type="text" name="distance" value="<%=@log%>" />

    <label for="pace">Pace</label>
    <input type="text"  name="pace" value="<%=@log%>" /> 

    <label for="avg_heart_rate">Average Heart Rate</label>
    <input type="text"  name="avg_heart_rate" value="<%=@log%>" />

    <label for="notes">Notes</label>
    <input type="text"  name="notes" value="<%=@log%>" />

    <input type="submit" value="submit" />
</form>